<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">
     
    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dip"
        android:adjustViewBounds="true"
       
        android:scaleType="fitXY" >
    </ImageView>
    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/logoImg"
        android:layout_toRightOf="@+id/logoImg"
        android:textColor="#000000"
        android:scrollHorizontally="true"
        android:maxLines="1" 
        android:layout_marginLeft="5dip"
        android:textSize="14dip" >
    </TextView>
    
    <TextView
        android:id="@+id/merchantNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTv"
        android:layout_toRightOf="@+id/logoImg"
        android:gravity="left"
        android:textColor="#000000"
        android:layout_marginLeft="5dip"         
        android:textSize="12dip" >
    </TextView>
    
    
    <TextView
        android:id="@+id/addrTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/merchantNameTv"
        android:layout_toRightOf="@+id/logoImg"
        android:gravity="left"
        android:textColor="#000000"
       android:layout_marginLeft="5dip" 
        
        android:textSize="12dip" >
    </TextView>
    
    <TextView
        android:id="@+id/addtimeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addrTv"
        android:layout_toRightOf="@+id/logoImg"
        android:gravity="left"
        android:textColor="#000000"
       android:layout_marginLeft="5dip" 
        
        android:textSize="12dip" >
    </TextView>
    
    
    


</RelativeLayout>