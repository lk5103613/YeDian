<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        layout="@layout/title" />
    
    <ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_above="@id/bottommenu"
		android:layout_below="@id/title">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/title" >

        <LinearLayout
            android:id="@+id/thmemeLL"
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/thmemePreTv"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="0dip"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="主题"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/themeTv"
                android:textSize="16sp"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="0dip"
                android:layout_weight="3"
                android:background="@null"
                 
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/hx0"
            android:layout_width="fill_parent"
            android:layout_height="3.5dip"
            android:layout_below="@id/thmemeLL"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dip"
            android:background="@drawable/aoxian"
            android:paddingLeft="20dip"
            
             />

        <LinearLayout
            android:id="@+id/timeLL"
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:layout_below="@id/hx0"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                 android:id="@+id/timePreTv"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="0dip"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="时间"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/timeTv"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="0dip"
                android:layout_weight="3"
                android:background="@null"
                android:text=""
                 android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/hx1"
            android:layout_width="fill_parent"
            android:layout_height="3.5dip"
            android:layout_below="@id/timeLL"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dip"
            android:background="@drawable/aoxian"
            android:paddingLeft="20dip"
             
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/addrLL"
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:layout_below="@id/hx1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/addrPreTv"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="0dip"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="地址"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/addrTv"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="0dip"
                android:layout_weight="3"
                android:background="@null"
                android:text=""
                 android:textSize="16sp"
                android:textColor="@color/black" />
            
            



  <ImageView
                     android:gravity="left"
                    android:layout_width="40dip"
                    android:layout_height="25dip"
                   
                     android:layout_gravity="center_vertical|left"
                    android:layout_marginLeft="10dip"
                    android:src="@drawable/m_addr"
                   />
            
            
        </LinearLayout>

        <TextView
            android:id="@+id/hx2"
            android:layout_width="fill_parent"
            android:layout_height="3.5dip"
            android:layout_below="@id/addrLL"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dip"
            android:background="@drawable/aoxian"
            android:paddingLeft="20dip"
          
             />
        

       
         <LinearLayout
            android:id="@+id/h_t"
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:layout_below="@id/addrLL"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/detailPreTv"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="0dip"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="详情"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/addr000Tv"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="0dip"
                android:layout_weight="3"
                android:background="@null"
                android:text=""
                android:textColor="@color/black" />
        </LinearLayout>
        
        
        
        
        
        
        
        
        
        
        
        

        <LinearLayout
            android:id="@+id/info1LL"
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:layout_below="@id/h_t"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/info1Tv"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left|top"
              
                android:inputType="textMultiLine"
                android:minLines="3"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainLL"
            android:layout_width="fill_parent"
            android:layout_height="120dip"
            android:layout_below="@id/info1LL"
            
            android:padding="10dip"
            android:orientation="horizontal" >
            
            <Gallery
	android:id="@+id/Gallery01" 
	android:spacing="5dip"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"/>

          
        </LinearLayout>
        
         <LinearLayout
            android:id="@+id/info2LL"
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:layout_below="@id/mainLL"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/info2Tv"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left|top"
              
                android:inputType="textMultiLine"
                android:minLines="3"
                android:textSize="12sp" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/main2LL"
           android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:layout_below="@id/info2LL"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dip"
            android:orientation="horizontal" >
            
            

           
        </LinearLayout>
        
        
    </RelativeLayout>
    </ScrollView>

</RelativeLayout>