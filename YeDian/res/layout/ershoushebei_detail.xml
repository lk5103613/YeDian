                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/emailTv"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
