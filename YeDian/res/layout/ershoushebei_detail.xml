        <LinearLayout
            android:id="@+id/addressLinkLL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailLL"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/addressLinkPre"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:background="@null"
                android:paddingLeft="15dip"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:text="公司地址:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/companyAddressTv"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:background="@null"
                android:paddingLeft="3dip"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:text="上海市黄浦区西藏中路8号"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/allLL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addressLinkLL"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/allPre"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                 
                android:background="@null"
                android:paddingLeft="15dip"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:text="联系我时，请说明是从夜店中国看到的"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="15sp" />

             
        </LinearLayout>
        </LinearLayout>
        </ScrollView>
        
        
        

        
        
        
    </RelativeLayout>

</RelativeLayout>