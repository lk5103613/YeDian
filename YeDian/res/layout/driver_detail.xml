<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        layout="@layout/driver_title" />

    <RelativeLayout
        android:id="@+id/sv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title" >

        <LinearLayout
            android:id="@+id/parent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_marginLeft="3dip"
                android:layout_marginTop="1dip"
                android:layout_weight="3"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/col01"
                    android:layout_width="60dip"
                    android:layout_height="100dip"
                    android:layout_marginTop="2dip"
                     
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/driverLogo"
                        android:layout_width="60dip"
                        android:layout_height="90dip"
                        
                        android:layout_marginLeft="2dip"
                        android:src="@drawable/logo200" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/col09"
                    android:layout_width="240dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:layout_marginTop="1dip"
                     
                    android:gravity="left"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/col00"
                        android:layout_width="200dip"
                        android:layout_height="0dip"
                        android:layout_marginLeft="0dip"
                        android:layout_marginTop="2dip"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:orientation="horizontal" >

                        
                        <TextView
                            android:id="@+id/truename"
                            android:layout_width="60dip"
                            android:layout_height="30dip"
                            android:clickable="true"
                            android:gravity="left"
                            android:text="司机"
                            android:textColor="@color/black"
                            android:textSize="15.0sp" />
                        
                       
                        <TextView
                            android:id="@+id/driveCnt"
                            android:layout_width="40dip"
                            android:layout_height="30dip"
                            android:clickable="true"
                            android:gravity="left"
                            android:text="空闲"
                            android:textColor="@color/green_for_coupon"
                            android:textSize="13.0sp" />
                        
                        <TextView
                            android:id="@+id/star"
                            android:layout_width="90dip"
                            android:layout_height="23dip"
                            android:clickable="true"
                            android:gravity="left"
                             
                        
                          />

                     
                        

                        
                       
                        
                        
                        
                        
                        
                        
                        
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/col200"
                        android:layout_width="230dip"
                        android:layout_height="30dip"
                        android:layout_marginLeft="0dip"
                        android:layout_marginTop="0dip"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/work_year"
                            android:layout_width="70dip"
                            android:layout_height="30dip"
                            android:clickable="true"
                            android:gravity="left"
                            android:text="驾龄"
                            android:textColor="@color/lightgrey"
                            android:textSize="13.0sp" />
                        
                      
                        <TextView
                            android:id="@+id/driveCnt"
                            android:layout_width="40dip"
                            android:layout_height="30dip"
                            android:clickable="true"
                            android:gravity="left"
                            android:text="代驾:"
                             android:textColor="@color/lightgrey"
                            android:textSize="13.0sp" />

                        <TextView
                            android:id="@+id/driveCntVal"
                            android:layout_width="40dip"
                            android:layout_height="30dip"
                            android:clickable="true"
                            android:gravity="left"
                            android:text="0次"
                             android:textColor="@color/lightgrey"
                            android:textSize="13.0sp" />
                        
                        <TextView
                            android:id="@+id/nativeplace"
                            android:layout_width="40dip"
                            android:layout_height="30dip"
                            android:clickable="true"
                            android:gravity="left"
                            android:text="籍贯:"
                             android:textColor="@color/lightgrey"
                            android:textSize="13.0sp" />

                        <TextView
                            android:id="@+id/nativeplaceTv"
                            android:layout_width="40dip"
                            android:layout_height="30dip"
                            android:clickable="true"
                            android:gravity="left"
                           
                            android:textColor="@color/lightgrey"
                            android:textSize="13.0sp" />
                        
                    </LinearLayout>
                    
                    
                    <LinearLayout
                        android:id="@+id/jz001"
                        android:layout_width="230dip"
                        android:layout_height="30dip"
                        android:layout_marginLeft="0dip"
                        android:layout_marginTop="0dip"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/work_year"
                            android:layout_width="50dip"
                            android:layout_height="30dip"
                            android:clickable="true"
                            android:gravity="left"
                            android:text="驾照:"
                           android:textColor="@color/lightgrey"
                            android:textSize="13.0sp" />
                        
                      
                        <TextView
                            android:id="@+id/jzTv"
                            android:layout_width="170dip"
                            android:layout_height="30dip"
                            android:clickable="true"
                            android:gravity="left"
                          
                            android:textColor="@color/lightgrey"
                            android:textSize="13.0sp" />

                       
                        
                    </LinearLayout>
                    
                    
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/col00"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dip"
                    android:layout_marginTop="15dip"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ver_tip_ll"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_marginTop="3dip"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:orientation="horizontal" >
                
                
                
                
                
            </LinearLayout>
            
            
            
            

            <LinearLayout
                android:id="@+id/update_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ver_tip_ll"
                android:layout_marginTop="0dip"
                android:gravity="center|center_horizontal|center_vertical"
                android:paddingLeft="40px"
                    android:paddingRight="40px"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/callBtn"
                    android:layout_width="fill_parent"
                    

                    

                    
                    android:layout_height="40dip"
                    android:background="@drawable/call_onclick"
                    android:clickable="true"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/update_ll"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dip"
                
                android:orientation="horizontal" >
            </LinearLayout>
            <!-- 
            <LinearLayout
                android:id="@+id/zw_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="0dip" >
            </LinearLayout>-->
            
        </LinearLayout>
    </RelativeLayout>
    
    <LinearLayout
    android:id="@+id/pull_navigate"
    android:layout_width="fill_parent"
    android:layout_below="@id/sv"
    android:layout_height="35dip"
    android:background="@drawable/topbg" 
    
    android:orientation="horizontal" >
        <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
         
        android:layout_gravity="center"
        android:text="客户评价"
        android:textSize="16.5sp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff" />
    </LinearLayout>
    
     <com.yedianchina.ui.PullDownView 
    android:layout_below="@id/pull_navigate"
    android:id="@+id/pull_down_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    android:background="#FFFFFF"
   >

</com.yedianchina.ui.PullDownView>
     
     
<include layout="@layout/common_listview" />
    

</RelativeLayout>