<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">
     
    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dip"
        android:adjustViewBounds="true"
       android:background="@drawable/nearby_u2"
        android:scaleType="fitXY" >
    </ImageView>
    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/logoImg"
        android:layout_toRightOf="@+id/logoImg"
        android:textColor="#000000"
        android:scrollHorizontally="true"
        android:maxLines="1" 
        android:text="飘渺"
        android:layout_marginLeft="5dip"
        android:textSize="14dip" >
    </TextView>
    
    <TextView
        android:id="@+id/sexTv"
        android:layout_width="46dip"
        android:layout_height="20dip"
        android:layout_below="@+id/titleTv"
       android:layout_toRightOf="@+id/logoImg"
        android:gravity="right"
        android:text="24"
        android:textColor="@color/white"
        android:layout_marginTop="5dip"
       android:layout_marginLeft="5dip" 
       android:background="@drawable/sex"
        android:textSize="12dip" >
    </TextView>
    
    
    
     <TextView
        android:id="@+id/distanceTv"
        android:layout_width="60dip"
        android:layout_height="14dip"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dip"
        android:layout_marginRight="100dip"
        android:adjustViewBounds="true"
      android:text="1.3公里 |"
      android:textColor="@color/gray"
        android:scaleType="fitXY" >
    </TextView>
    
     <TextView
        android:id="@+id/lastLoginTv"
        android:layout_width="90dip"
        android:layout_height="14dip"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dip"
        android:layout_marginRight="1dip"
        android:adjustViewBounds="true"
      android:text="05-12 12:00"
      android:textColor="@color/gray"
        android:scaleType="fitXY" >
    </TextView>
    
    
    
    
     
    
     
     
    
   
    
    
    
    
    
    
    
    
    <TextView
        android:id="@+id/contentTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sexTv"
       android:layout_toRightOf="@+id/logoImg"
        android:gravity="left"
        android:textColor="@color/gray"
        android:layout_marginTop="9dip"
       android:layout_marginLeft="5dip" 
        android:text="夜店中国让我找到了红颜知己^^^^^^^^"
        android:textSize="12dip" >
    </TextView>
    
    
    


</RelativeLayout>