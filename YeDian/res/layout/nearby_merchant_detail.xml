<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        layout="@layout/title" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/title"
        android:layout_margin="0dip"
        android:scrollbars="none" >

        <RelativeLayout
            android:id="@+id/sv00"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title" >

            <RelativeLayout
                android:id="@+id/sv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/parent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/line1"
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_marginLeft="3dip"
                        android:layout_marginTop="1dip"
                        android:layout_weight="3"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/col01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/merchantLogo"
                                android:layout_width="119dip"
                                android:layout_height="89dip"
                                android:layout_marginLeft="2dip"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/col09"
                            android:layout_width="240dip"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="8dip"
                            android:layout_marginTop="1dip"
                            android:gravity="left"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:id="@+id/col00"
                                android:layout_width="200dip"
                                android:layout_height="40dip"
                                android:layout_marginLeft="0dip"
                                android:layout_marginTop="5dip"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/merchantname"
                                    android:layout_width="160dip"
                                    android:layout_height="20dip"
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    android:gravity="left"
                                    android:text="夜店名称"
                                    android:textColor="@color/black"
                                    android:textSize="17.0sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/jz001"
                                android:layout_width="226dip"
                                android:layout_height="23dip"
                                android:layout_marginLeft="0dip"
                                android:layout_marginTop="0dip"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:id="@+id/work_year"
                                    android:layout_width="90dip"
                                    android:layout_height="fill_parent"
                                    android:clickable="true"
                                    android:gravity="left"
                              
                                    android:textColor="@color/lightgrey"
                                     />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/jz001"
                                android:layout_width="226dip"
                                android:layout_height="30dip"
                                android:layout_marginLeft="0dip"
                                android:layout_marginTop="10dip"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:id="@+id/nearby_img"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:gravity="left"
                                  />

                                <TextView
                                    android:id="@+id/distanceTv"
                                    android:layout_width="70dip"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="6dip"
                                    android:clickable="true"
                                    android:gravity="left"
                                    android:text="1.2公里"
                                    android:textColor="@color/black"
                                    android:textSize="13.0sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line2"
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_marginLeft="3dip"
                        android:layout_marginTop="10dip"
                        android:layout_weight="3"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/line_btn_ll"
                android:layout_width="fill_parent"
                android:layout_height="5dip"
                android:layout_below="@id/sv"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/red_line"
                    android:layout_width="fill_parent"
                    android:layout_height="3.5dip"
                    android:layout_marginLeft="2dip"
                   />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_btn_frame"
                android:layout_width="fill_parent"
                android:layout_height="25dip"
                android:layout_below="@id/line_btn_ll"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/line_btn_01"
                    android:layout_width="0dip"
                    android:layout_height="25dip"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/send_msgTv"
                        android:layout_width="80dip"
                        android:layout_height="23dip"
                        android:gravity="center"
                       />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_btn_02"
                    android:layout_width="0dip"
                    android:layout_height="25dip"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/i_already_comeTv"
                        android:layout_width="80dip"
                        android:layout_height="23dip"
                        android:gravity="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_btn_03"
                    android:layout_width="0dip"
                    android:layout_height="25dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/yedian_xiuTv"
                        android:layout_width="80dip"
                        android:layout_height="23dip"
                       />
                </LinearLayout>

              
            </LinearLayout>

          

            <LinearLayout
                android:id="@+id/link_frame"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_btn_frame"
                android:layout_marginLeft="15dip"
                android:gravity="center"
                android:layout_marginRight="15dip"
                android:layout_marginTop="15dip"
             
                android:orientation="vertical" >
                
                
                
                <LinearLayout
                android:id="@+id/linkLL"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                
                android:layout_marginLeft="15dip"
                android:gravity="center"
                android:layout_marginRight="15dip"
                android:layout_marginTop="0dip"
             
                android:orientation="horizontal" >
                
                
                <TextView
                    android:id="@+id/telPreTv"
                    android:layout_width="40dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="4dip"
                    android:gravity="left"
                    android:text="电话"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/darkgrey"
                    android:textSize="15.5sp" />
                
                
                
                <LinearLayout
              
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                
                android:layout_marginLeft="15dip"
                android:gravity="center"
                android:layout_marginRight="15dip"
                android:layout_marginTop="0dip"
             
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/telTv"
                    android:layout_width="140dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="48dip"
                    android:layout_marginTop="4dip"
                    android:gravity="left"
                     
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/grey"
                    android:textSize="15.5sp" />
                
                
                <ImageView
                    android:id="@+id/telImgTv"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_marginLeft="0dip"
                    android:layout_marginTop="4dip"
                    android:gravity="left"
                  
                    />
                
                
                <TextView
                 
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dip"
                    android:layout_marginTop="4dip"
                    android:gravity="left"
                   
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/grey"
                    android:textSize="15.5sp" />
                
                
                </LinearLayout>
                
             
                
                
                
                
                </LinearLayout>
                
                
                
                
                
                   <TextView
                 
                    android:layout_width="100dip"
                    android:layout_height="12dip"
                    android:layout_marginLeft="0dip"
                    android:layout_marginTop="4dip"
                    android:gravity="left"
                   
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/grey"
                   />
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                <ImageView
                     
                    android:layout_width="fill_parent"
                    android:layout_height="3.5dip"
                    android:layout_marginLeft="2dip"
                    android:background="@drawable/aoxian"
                   />
                
                   <TextView
                 
                    android:layout_width="100dip"
                    android:layout_height="12dip"
                    android:layout_marginLeft="0dip"
                    android:layout_marginTop="4dip"
                    android:gravity="left"
                   
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/grey"
                   />

                <LinearLayout
                android:id="@+id/addrLL"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                
                android:layout_marginLeft="15dip"
                android:gravity="center"
                android:layout_marginRight="15dip"
                android:layout_marginTop="1dip"
             
                android:orientation="horizontal" >
                    
                    <ImageView
                     android:gravity="left"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                   
                     android:layout_gravity="center_vertical|left"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/m_addr"
                   />
                    
                <TextView
                    android:id="@+id/addrTv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                   android:layout_marginLeft="27dip"
                    android:layout_marginTop="0dip"
                    android:gravity="left"
                    android:text="              "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/grey"
                    android:textSize="15.5sp" />
                
                </LinearLayout>
                
            </LinearLayout>

           

            <LinearLayout
                android:id="@+id/merchant_desc_frame"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/link_frame"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="15dip"
                android:gravity="center"
           
                android:orientation="vertical" >
                
                
                <TextView
                     android:id="@+id/merchant_introPreTv"
                    android:layout_width="fill_parent"
                    android:layout_height="20dip"
                    android:text="商家介绍" 
                    android:gravity="left"
                     android:layout_marginTop="20dip"
                      android:layout_marginLeft="18dip"
                    android:textColor="@color/black"
                    />
                
                
                <ImageView
                     
                    android:layout_width="fill_parent"
                    android:layout_height="3.5dip"
                    android:layout_marginLeft="2dip"
                    android:background="@drawable/aoxian"
                   />

                <TextView
                    android:id="@+id/merchant_introTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="8"
                    android:gravity="left"
                     android:layout_marginTop="20dip"
                      android:layout_marginLeft="15dip"
                      android:textColor="@color/grey"
                    android:singleLine="false"
                    android:text="" />
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/xfjjframe"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/merchant_desc_frame"
          
               android:gravity="center"
                android:layout_marginTop="15dip"
                
                android:layout_marginLeft="15dip"
                
                android:orientation="vertical" >
                
                
                    <TextView
                     android:id="@+id/xfjjPreTv"
                    android:layout_width="fill_parent"
                    android:layout_height="20dip"
                    android:text="消费简介" 
                    android:gravity="left"
                     android:layout_marginTop="20dip"
                      android:layout_marginLeft="18dip"
                    android:textColor="@color/black"
                    />
                
                
                <ImageView
                     
                    android:layout_width="fill_parent"
                    android:layout_height="3.5dip"
                    android:layout_marginLeft="2dip"
                    android:background="@drawable/aoxian"
                   />
                
               

                <TextView
                    android:id="@+id/xfjjTv"
                     android:layout_marginTop="12dip"
                      
                      android:layout_marginLeft="35dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                   android:maxLines="3"
                    android:gravity="left"
                    android:singleLine="false"
                    android:textColor="@color/grey"
                    android:text="暂时没有" />
                     -
            </LinearLayout>

           

        
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>