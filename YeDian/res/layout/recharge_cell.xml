<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/lv_bg">
    <!-- 时间 -->
    <TextView
        android:id="@+id/addTimeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dip"        
        android:adjustViewBounds="true"
        android:textColor="@color/black"
        android:scaleType="fitXY" >
    </TextView>
    <!-- 充值渠道 -->
    <TextView
        android:id="@+id/driverNamePreTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/addTimeTv"
        android:layout_toRightOf="@+id/addTimeTv"
        android:textColor="@color/lightgrey"
        android:layout_marginLeft="5dip"         
         android:text="充值渠道:"
        android:textSize="16dip" >
    </TextView>
   
     <TextView
        android:id="@+id/driverNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/driverNamePreTv"
        android:layout_toRightOf="@+id/driverNamePreTv"
       
       android:textColor="@color/black"
        android:layout_marginLeft="5dip"                   
        android:textSize="16dip" >
    </TextView>
    
    <!-- 目的地 -->
    <TextView
        android:id="@+id/endLocationPreTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_below="@+id/addTimeTv"
        android:textColor="@color/lightgrey"
        android:text="金额:"
        android:layout_marginLeft="4dip"                   
        android:textSize="16dip" >
    </TextView>
    
    <TextView
        android:id="@+id/endLocationTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/endLocationPreTv"
        android:layout_toRightOf="@+id/endLocationPreTv"
        android:textColor="#000000"
        
        android:layout_marginLeft="4dip"                   
        android:textSize="16dip" >
    </TextView>
    
    <!-- 出发地址 -->
    <TextView
        android:id="@+id/start_addr_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/driverNamePreTv"
        android:layout_toRightOf="@+id/endLocationTv"
         android:layout_marginLeft="10dip"        
         android:textColor="@color/lightgrey"
         android:text="账户余额:"
        android:textSize="16dip" >
    </TextView>
    <TextView
        android:id="@+id/balanceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/start_addr_pre"
        android:layout_toRightOf="@+id/start_addr_pre"
         
         android:textColor="@color/black"
         
        android:textSize="16dip" >
    </TextView>
    
   
    
    

</RelativeLayout>