<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

   <include
        android:id="@+id/title"
        layout="@layout/merchant_rank_title" />
   
   <LinearLayout android:id="@+id/tool_bar"
		android:layout_width="fill_parent" android:layout_height="40dip"
		android:layout_below="@id/title" android:padding="0dip"   android:orientation="horizontal"
		>
		
	    
		
		<TextView android:layout_width="0dip"  android:layout_weight="1"
		   
			android:layout_height="fill_parent" android:gravity="center"
			android:text="今日排名"    android:textColor="#FFFFFFFF"   android:background="@drawable/jb_focus"  
			android:layout_centerVertical="true" android:id="@+id/todayBtn"
			android:layout_alignParentRight="true" android:clickable="true" />
		
		<TextView android:layout_width="0dip"  android:layout_weight="1"
			android:layout_height="fill_parent" android:gravity="center"
			android:background="@drawable/ktv"  android:text="本周排名"
			android:layout_centerVertical="true" android:id="@+id/weekBtn"
			android:layout_alignParentRight="true" android:clickable="true" />
		
		<TextView android:layout_width="0dip"  android:layout_weight="1"
			android:layout_height="fill_parent" android:gravity="center"
			android:background="@drawable/yzh"  android:text="本月排名"
			android:layout_centerVertical="true" android:id="@+id/monthBtn"
			android:layout_alignParentRight="true" android:clickable="true" />
		
		
		
		
		
		
		 
		
		
		
		
		
		
		
		
		
		
		
		
		
	</LinearLayout>

   
   
   

    <com.yedianchina.control.XListView
        android:id="@+id/list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/tool_bar"
        android:background="#FFFFFF" >
    </com.yedianchina.control.XListView>
    
  
    
    

</RelativeLayout>