<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        layout="@layout/title" />

    <ScrollView
        android:id="@+id/sc"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/title" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <LinearLayout
                android:id="@+id/tool_bar1"
                android:layout_width="fill_parent"
                android:layout_height="35dip"
                android:orientation="horizontal"
                android:padding="0dip" >

                <TextView
                    android:id="@+id/jiubaBtn"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@drawable/jb_focus"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/ktvBtn"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@drawable/ktv"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/yezonghuiBtn"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@drawable/yzh"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nameLL"
                android:layout_width="277dip"
                android:layout_height="40.5dip"
                android:layout_below="@id/tool_bar1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/linkmanPreTv"
                    android:layout_width="65dip"
                    android:layout_height="20.5dip"
                    android:layout_gravity="center_vertical"
                    android:text="姓名"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/linkmanTv"
                    android:layout_width="0dip"
                    android:layout_height="39dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/input2"
                    android:hint="请输入姓名"
                    android:paddingLeft="5dip"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <requestFocus />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/henxian2"
                android:layout_width="fill_parent"
                android:layout_height="3.5dip"
                android:layout_below="@id/nameLL"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dip"
                android:background="@drawable/aoxian"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pwdLL1"
                android:layout_width="277dip"
                android:layout_height="40.5dip"
                android:layout_below="@id/henxian2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/sexPreTv"
                    android:layout_width="35dip"
                    android:layout_height="20.5dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dip"
                    android:text="性别"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:id="@+id/manLL"
                    android:layout_width="wrap_content"
                    android:layout_height="40.5dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginTop="0dip"
                    android:clickable="true"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/manPreImg"
                        android:layout_width="16dip"
                        android:layout_height="15dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="8dip"
                        android:background="@drawable/man" />

                    <TextView
                        android:id="@+id/manTxt"
                        android:layout_width="29dip"
                        android:layout_height="20.5dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="0dip"
                        android:layout_marginTop="10dip"
                        android:text="男"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/manImg"
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="7dip"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/red_dot" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/girlLL"
                    android:layout_width="wrap_content"
                    android:layout_height="40.5dip"
                    android:layout_marginLeft="50dip"
                    android:layout_marginTop="0dip"
                    android:clickable="true"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/girlPreImg"
                        android:layout_width="13dip"
                        android:layout_height="21dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/girl"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/girlTxt"
                        android:layout_width="29dip"
                        android:layout_height="20.5dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="10dip"
                        android:text="女"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/girlImg"
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="17dip"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/gray_dot" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/henxian3"
                android:layout_width="fill_parent"
                android:layout_height="3.5dip"
                android:layout_below="@id/pwdLL1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dip"
                android:background="@drawable/aoxian"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linkMpLL"
                android:layout_width="277dip"
                android:layout_height="39dip"
                android:layout_below="@id/henxian3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/linkMpPreTv"
                    android:layout_width="65dip"
                    android:layout_height="20.5dip"
                    android:layout_gravity="center_vertical"
                    android:text="电话"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/linkMpTv"
                    android:layout_width="0dip"
                    android:layout_height="39dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/input2"
                    android:hint="请输入手机号码"
                    android:paddingLeft="5dip"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linkEmailLL"
                android:layout_width="277dip"
                android:layout_height="39dip"
                android:layout_below="@id/linkMpLL"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/linkEmailPreTv"
                    android:layout_width="65dip"
                    android:layout_height="20.5dip"
                    android:layout_gravity="center_vertical"
                    android:text="Email"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/linkEmailTv"
                    android:layout_width="0dip"
                    android:layout_height="39dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/input2"
                    android:hint="请输入Email"
                    android:paddingLeft="5dip"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/henxian5"
                android:layout_width="fill_parent"
                android:layout_height="3dip"
                android:layout_below="@id/linkEmailLL"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dip"
                android:background="@drawable/aoxian"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zhiweiLL"
                android:layout_width="277dip"
                android:layout_height="40.5dip"
                android:layout_below="@id/henxian5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/reqJobNamePreTv"
                    android:layout_width="65dip"
                    android:layout_height="20.5dip"
                    android:layout_gravity="center_vertical"
                    android:text="应聘职位"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/reqJobNameEt"
                    android:layout_width="0dip"
                    android:layout_height="39dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/input2"
                    android:hint="请输入职位名称"
                    android:paddingLeft="5dip"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textSize="15sp" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/descLL"
                android:layout_width="277dip"
                android:layout_height="80.5dip"
                android:layout_below="@id/zhiweiLL"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/descPreTv"
                    android:layout_width="65dip"
                    android:layout_height="20.5dip"
                    android:layout_gravity="center_vertical"
                    android:text="自我描述"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/descTv"
                    android:layout_width="0dip"
                    android:layout_height="80.5dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/textarea2"
                    android:gravity="left|top"
                    android:hint="请写点自我介绍嘛...."
                    android:inputType="textMultiLine"
                    android:minLines="6"
                    android:paddingLeft="3dip"
                    android:paddingTop="3dip"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/photoLLA"
                android:layout_width="wrap_content"
                android:layout_height="88.5dip"
                android:layout_below="@id/descLL"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/photo0"
                    android:layout_width="60dip"
                    android:layout_height="60.5dip"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/add_pic"
                    android:paddingLeft="3dip"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/pic1space"
                    android:layout_width="15dip"
                    android:layout_height="60.5dip"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="3dip"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/photo1"
                    android:layout_width="60dip"
                    android:layout_height="60.5dip"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/add_pic"
                    android:paddingLeft="3dip"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/pic2space"
                    android:layout_width="15dip"
                    android:layout_height="60.5dip"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="3dip"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/photo2"
                    android:layout_width="60dip"
                    android:layout_height="60.5dip"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/add_pic"
                    android:paddingLeft="3dip"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/pic3space"
                    android:layout_width="15dip"
                    android:layout_height="60.5dip"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="3dip"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/photo3"
                    android:layout_width="60dip"
                    android:layout_height="60.5dip"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/add_pic"
                    android:paddingLeft="3dip"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/henxian9"
                android:layout_width="fill_parent"
                android:layout_height="3.5dip"
                android:layout_below="@id/photoLLA"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dip"
                android:background="@drawable/aoxian"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/spaceallLL"
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:layout_below="@id/henxian9"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>