<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        layout="@layout/title" />

    <ScrollView
        android:id="@+id/sc"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/title" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:padding="10dp" >

            <LinearLayout
                android:id="@+id/tool_bar1"
                android:layout_width="fill_parent"
                android:layout_height="35dip"
                android:orientation="horizontal"
                android:padding="0dip" >

                <TextView
                    android:id="@+id/jiubaBtn"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="酒吧"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/ktvBtn"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="KTV"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/yezonghuiBtn"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="夜总会"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zhiweiLL"
                android:layout_width="277dip"
                android:layout_height="40.5dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/reqJobNamePreTv"
                    android:layout_width="65dip"
                    android:layout_height="20.5dip"
                    android:layout_gravity="center_vertical"
                    android:text="应聘职位"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/reqJobNameEt"
                    android:layout_width="0dip"
                    android:layout_height="39dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/input2"
                    android:hint="请输入职位名称"
                    android:paddingLeft="5dip"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textSize="15sp" >

                    <requestFocus />
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="277dip"
                android:layout_height="40.5dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="65dip"
                    android:layout_height="20.5dip"
                    android:layout_gravity="center_vertical"
                    android:text="地域选择"
                    android:textColor="@color/black" />

                <Spinner
                    android:id="@+id/local_select"
                    android:layout_width="0dip"
                    android:layout_height="39dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/input2"
                    android:paddingLeft="5dip"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/descLL"
                android:layout_width="277dip"
                android:layout_height="80.5dip"
                android:layout_below="@id/zhiweiLL"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/descPreTv"
                    android:layout_width="65dip"
                    android:layout_height="20.5dip"
                    android:layout_gravity="center_vertical"
                    android:text="自我描述"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/descTv"
                    android:layout_width="0dip"
                    android:layout_height="80.5dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/textarea2"
                    android:gravity="left|top"
                    android:hint="请写点自我介绍嘛...."
                    android:inputType="textMultiLine"
                    android:minLines="6"
                    android:paddingLeft="3dip"
                    android:paddingTop="3dip"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/photoLLA"
                android:layout_width="wrap_content"
                android:layout_height="88.5dip"
                android:layout_below="@id/descLL"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" 
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/photo0"
                    android:layout_width="60dip"
                    android:layout_height="60.5dip"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/add_pic"
                    android:paddingLeft="3dip"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/pic1space"
                    android:layout_width="15dip"
                    android:layout_height="60.5dip"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="3dip"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/photo1"
                    android:layout_width="60dip"
                    android:layout_height="60.5dip"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/add_pic"
                    android:paddingLeft="3dip"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/pic2space"
                    android:layout_width="15dip"
                    android:layout_height="60.5dip"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="3dip"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/photo2"
                    android:layout_width="60dip"
                    android:layout_height="60.5dip"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/add_pic"
                    android:paddingLeft="3dip"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/pic3space"
                    android:layout_width="15dip"
                    android:layout_height="60.5dip"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="3dip"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/photo3"
                    android:layout_width="60dip"
                    android:layout_height="60.5dip"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/add_pic"
                    android:paddingLeft="3dip"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/henxian9"
                android:layout_width="fill_parent"
                android:layout_height="3.5dip"
                android:layout_below="@id/photoLLA"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dip"
                android:background="@drawable/aoxian"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/spaceallLL"
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:layout_below="@id/henxian9"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >
            </LinearLayout>


            <LinearLayout
                android:id="@+id/allLL"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_horizontal"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/save_btn"
                    android:layout_width="277dip"
                    android:layout_height="35dip"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ok"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>