<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">
     
    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dip"
        android:adjustViewBounds="true"
      
        android:scaleType="fitXY" >
    </ImageView>
    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/logoImg"
        android:layout_toRightOf="@+id/logoImg"
        android:textColor="#000000"
        android:scrollHorizontally="true"
        android:maxLines="1" 
        android:text="ABC酒吧"
        android:layout_marginLeft="5dip"
        android:textSize="17dip" >
    </TextView>
    
    
    
     <TextView
        android:id="@+id/paiming"
        android:layout_width="53.6dip"
        android:layout_height="34.4dip"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dip"
        android:text="8"
        android:textSize="22dip"
        android:gravity="center"
         android:textColor="@color/white"
        android:adjustViewBounds="true"
       android:background="@drawable/paiming"
        android:scaleType="fitXY" >
    </TextView>
    
     <ImageView
        android:id="@+id/hg"
        android:layout_width="36.4dip"
        android:layout_height="22.8dip"
         
        android:layout_marginTop="22dip"
        
        android:adjustViewBounds="true"
       
       android:layout_toLeftOf="@+id/paiming"
        android:scaleType="fitXY" >
    </ImageView>
    
    
    
    
    <TextView
        android:id="@+id/starTv"
        android:layout_width="63dip"
        android:layout_height="12dip"
        android:layout_below="@+id/paiming"
        android:layout_alignParentRight="true"
      
        android:background="@drawable/star4"
        android:layout_marginTop="8dip"
       
        android:layout_marginLeft="5dip"         
        android:textSize="12dip" >
    </TextView>
    
    
    <TextView
        android:id="@+id/addrTv"
        android:layout_width="0.9dip"
        android:layout_height="17.5dip"
        android:layout_below="@+id/titleTv"
        android:layout_toRightOf="@+id/logoImg"
        android:gravity="left"
        android:textColor="#000000"
        android:layout_marginTop="5dip"
       android:layout_marginLeft="8dip" 
        
        android:textSize="12dip" >
    </TextView>
    
    
     <TextView
        android:id="@+id/distanceTv"
        android:layout_width="48.9dip"
        android:layout_height="17.5dip"
        android:layout_below="@+id/titleTv"
        android:layout_toRightOf="@+id/addrTv"
        android:gravity="left"
        android:textColor="#000000"
        android:layout_marginTop="5dip"
       android:layout_marginLeft="1dip" 
         android:text="2.0kg"
        android:textSize="12dip" >
    </TextView>
    
     
    
    
    
    
    <TextView
        android:id="@+id/hotTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addrTv"
        android:layout_toRightOf="@+id/logoImg"
        android:gravity="left"
        android:textColor="@color/red"
        android:layout_marginTop="2dip"
       android:layout_marginLeft="8dip" 
        android:text="人气:888"
        android:textSize="12dip" >
    </TextView>
    
    
    


</RelativeLayout>