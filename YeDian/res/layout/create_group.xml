<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- 顶部标题 -->

    <include
        android:id="@+id/title"
        layout="@layout/title" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bottommenu"
        android:layout_below="@id/title" >

        

        <LinearLayout
            android:id="@+id/password_box"
            android:layout_width="310dip"
            android:layout_height="30.5dip"
            
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            
            android:orientation="horizontal" >
            
            <TextView
                android:layout_width="60dip"
                android:layout_height="20.5dip"
                android:layout_gravity="center_vertical"
                android:text="群的昵称:"
                android:textColor="@color/black" />
            
            

            <EditText
                android:background="@drawable/input0604"
                android:id="@+id/mpTv"
                android:layout_width="0dip"
                android:layout_height="30.5dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
               
                android:hint="请输入群昵称"
                android:inputType="textPassword"
                android:paddingLeft="1dip"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/henxian1"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dip"
            android:background="@drawable/hengxian"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/smsId"
            android:layout_width="310dip"
            android:layout_height="80.5dip"
             
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dip"
           
            android:orientation="horizontal" >

            <TextView
                android:layout_width="60dip"
                android:layout_height="20.5dip"
                android:layout_gravity="center_vertical"
                android:text="群的简介:"
                android:textColor="@color/black" />
            
            

            <EditText
                android:background="@drawable/textarea"
                android:id="@+id/descTv"
                 android:layout_width="0dip"
                android:layout_height="80.5dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
               
               
                android:hint="请写点群的介绍嘛...."
              
                android:paddingLeft="1dip"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="15sp"
                android:inputType="textMultiLine"
   android:gravity="left|top"
   android:minLines="6" />

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/henxian1"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dip"
            android:background="@drawable/hengxian"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tipLL"
            android:layout_width="310dip"
            android:layout_height="30.5dip"
            android:layout_below="@id/smsId"
            android:layout_marginTop="20dip"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20.5dip"
                android:text="群的头像"
                android:textColor="@color/black" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/henxian1"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="210dip"
            android:background="@drawable/hengxian"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/isMerchantOrPersonalLL"
            android:layout_width="310dip"
            android:layout_height="30.5dip"
            android:layout_below="@id/tipLL"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dip"
           
            android:orientation="horizontal" >

            <TextView
                android:layout_width="69dip"
                android:layout_height="20.5dip"
                android:layout_gravity="center_vertical"
                android:text="进群验证:"
                android:textColor="@color/black" />
            
            
            <LinearLayout
            android:id="@+id/isMerchantOrPersonalLLA"
           android:layout_width="0dip"
                android:layout_height="30.5dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
            android:layout_marginTop="0dip"
            android:background="@drawable/reg_ll"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/merchantTxt"
                android:layout_width="45dip"
                android:layout_height="20.5dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="0dip"
                android:text="不需要"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/merchantImg"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dip"
                android:background="@drawable/red_dot" />

            <TextView
                android:layout_width="15dip"
                android:layout_height="20.5dip"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="63dip"
                android:layout_height="20.5dip"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/personalTxt"
                android:layout_width="29dip"
                android:layout_height="20.5dip"
                android:layout_gravity="center_vertical"
                android:text="需要"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/personalImg"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="17dip"
                android:background="@drawable/gray_dot" />
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/henxian1"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="260dip"
            android:background="@drawable/hengxian"
            android:orientation="horizontal" >
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/selectCompanyLL"
            android:layout_width="310dip"
            android:layout_height="30.5dip"
            android:layout_below="@id/isMerchantOrPersonalLL"
            android:layout_marginTop="20dip"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

            <TextView
                 android:layout_marginTop="7dip"
               android:layout_width="69dip"
                android:layout_height="20.5dip"
                android:text="选择夜店:"
                android:textColor="@color/black" />
            
            
            <TextView
                android:layout_marginTop="7dip"
                android:layout_width="80dip"
                android:layout_height="20.5dip"
                android:text="请选择夜店:"
                android:textColor="@color/black" />
            

          
            
            
            
            <TextView
                android:id="@+id/selMerchant"
                android:layout_width="9dip"
                android:layout_height="18dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="99dip"
                android:layout_marginTop="0dip"
                android:background="@drawable/to_right"
                android:gravity="center_horizontal|top" />
            
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/henxian1"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/selectCompanyLL"
            android:layout_marginTop="10dip"
            android:background="@drawable/hengxian"
            android:orientation="horizontal" >
        </LinearLayout>
        
       

        
    </RelativeLayout>

</RelativeLayout>