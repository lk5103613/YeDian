<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_navigate"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:background="@drawable/topbg"
    android:orientation="horizontal" >

     <LinearLayout
        android:id="@+id/setting_title_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dip"
        android:gravity="center"
        android:orientation="horizontal" >

       <ImageView
            android:id="@+id/backBtn"
            style="@style/title_right_button"
            android:layout_width="87dip"
            android:layout_height="50dip"
            android:src="@drawable/newback" />
        
        
        
        
        
    </LinearLayout>

    <TextView
        android:id="@+id/NavigateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        
        android:textColor="@color/white"
        android:textSize="18.0sp" />
    
    

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dip"
        android:gravity="center"
        android:orientation="horizontal" >
        
      
        
        
        <TextView
            android:id="@+id/selectBtn"
            android:layout_width="4dip"
            android:layout_height="44dip"
            android:text=""
            android:textSize="13sp"
            android:clickable="true"
            android:textColor="@color/white"
            android:gravity="center"
        />
        
        
        <TextView
            android:id="@+id/selectBtn"
            android:layout_width="40dip"
            android:layout_height="44dip"
            android:text="地图 "
            android:textSize="13sp"
            android:clickable="true"
            android:textColor="@color/white"
            android:gravity="center"
        />
        
        <TextView
            android:id="@+id/publishRecruitBtn2"
            android:layout_width="13dip"
            android:layout_height="44dip"
            android:text="    "
            android:textSize="13sp"
            android:clickable="true"
            android:textColor="@color/white"
            android:gravity="center"
        />
        

        
    </LinearLayout>

    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/NavigateTitle"
        android:layout_alignBottom="@+id/NavigateTitle"
        android:layout_centerHorizontal="true"
        android:text="夜店排名"
        
        android:textSize="23.5sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"/>

</RelativeLayout>
