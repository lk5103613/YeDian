<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_navigate"
    android:layout_width="fill_parent"
    android:layout_height="63px"
    android:background="@drawable/topbg" 
    android:orientation="horizontal"   android:layout_alignParentTop="true" android:gravity="center">

    <LinearLayout
        android:id="@+id/setting_title_btn"
        android:layout_width="43dip"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dip"
        android:gravity="center"
        android:orientation="vertical" >

       
    </LinearLayout>

    <TextView
        android:id="@+id/NavigateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:text=""
        android:textColor="#ffffffff"
        android:textSize="18.0sp" />

    <LinearLayout
        android:id="@+id/cityLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/city_tv"
            android:layout_width="40dip"
            android:layout_height="30dip"
            android:text="上海"
            android:clickable="true"
            android:textColor="#ffffff"
            android:gravity="center"
         
           
             />
        
        <TextView
            android:id="@+id/sel_city"
            android:layout_width="20dip"
            android:layout_height="20dip"
           android:background="@drawable/chevron_default_down"
            android:clickable="true"
            
            android:gravity="center"
         
           
             />
    </LinearLayout>

    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/NavigateTitle"
        android:layout_alignBottom="@+id/NavigateTitle"
        android:layout_centerHorizontal="true"
        android:text="夜店中国价格表"
        android:textSize="20.5sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff" />
    

</RelativeLayout>