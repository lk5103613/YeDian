<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">
     
    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dip"
        android:adjustViewBounds="true"
       
        android:scaleType="fitXY" >
    </ImageView>
    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/logoImg"
        android:layout_toRightOf="@+id/logoImg"
        android:textColor="#000000"
        android:scrollHorizontally="true"
        android:maxLines="1" 
       
        android:layout_marginLeft="5dip"
        android:textSize="14dip" >
    </TextView>
    
    <TextView
        android:id="@+id/tmp"
        android:layout_width="20dip"
        android:layout_height="wrap_content"
       android:layout_alignTop="@+id/logoImg"
        android:layout_toRightOf="@+id/titleTv"
        android:gravity="right"
        android:textColor="#000000"
      
        android:text="     "
        android:textSize="12dip" >
    </TextView>
    
    
     <TextView
        android:id="@+id/cityNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignTop="@+id/logoImg"
        android:layout_toRightOf="@+id/tmp"
        android:gravity="center_vertical|right"
        android:textColor="#000000"
       android:layout_alignParentRight="true" 
        android:text="上海"
        android:layout_marginRight="20dip"    
        android:textSize="12dip" >
    </TextView>
    
    
    <TextView
        android:id="@+id/merchantNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTv"
        android:layout_toRightOf="@+id/logoImg"
        android:gravity="left"
        android:textColor="#000000"
        android:layout_marginTop="5dip"
        android:text=""
        android:layout_marginLeft="5dip"         
        android:textSize="12dip" >
    </TextView>
    
    
    <TextView
        android:id="@+id/addrTv"
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_below="@+id/merchantNameTv"
        android:layout_toRightOf="@+id/logoImg"
        android:gravity="left"
        android:textColor="#000000"
       android:layout_marginLeft="5dip" 
        
        android:textSize="12dip" >
    </TextView>
    
    <TextView
        android:id="@+id/ageTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addrTv"
        android:layout_toRightOf="@+id/logoImg"
        android:gravity="left"
        android:textColor="#000000"
       android:layout_marginLeft="5dip" 
        android:text="29"
        android:textSize="12dip" >
    </TextView>
    
    <TextView
        android:id="@+id/addtimeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addrTv"
        android:layout_toRightOf="@+id/ageTv"
        android:gravity="right"
        android:textColor="#000000"
       android:layout_marginLeft="5dip" 
        android:text="2014-05-10"
        android:layout_marginRight="20dip"    
        android:layout_alignParentRight="true" 
        android:textSize="12dip" >
    </TextView>
    
    
    


</RelativeLayout>