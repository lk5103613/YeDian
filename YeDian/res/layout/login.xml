<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <!-- 顶部标题 -->

    <include
        android:id="@+id/title"
        layout="@layout/title" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bottommenu"
        android:layout_below="@id/title" >

        <LinearLayout
            android:id="@+id/cell_phone_box"
            android:layout_width="277dip"
            android:layout_height="33.5dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dip"
            android:background="@drawable/username"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/u"
                android:layout_width="277dip"
                android:layout_height="33.5dip"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dip"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入您的手机号"
                android:paddingLeft="53dip"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColorHint="@color/lightgrey"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/login_hint"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@id/cell_phone_box"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dip"     
            android:paddingLeft="20dip"
            android:background="@drawable/hengxian"
            android:textColor="@color/home_list_color"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/password_box"
            android:layout_width="277dip"
            android:layout_height="33.5dip"
            android:layout_below="@id/login_hint"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dip"
            android:background="@drawable/password"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/pwd"
                android:layout_width="0dip"
                android:layout_height="33.5dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingLeft="53dip"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColorHint="@color/lightgrey"
                android:textSize="15sp" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/password_box"
            android:layout_width="277dip"
            android:layout_height="33.5dip"
            android:layout_below="@id/login_hint"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="63dip"
             
            android:orientation="horizontal" >
            
            

            <LinearLayout
            android:id="@+id/ck"
            android:layout_width="0dip"
             android:layout_weight="3"
            android:layout_height="wrap_content"
           
            android:layout_marginTop="0dip"
             
            android:orientation="horizontal" >
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                />
            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dip"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="记住密码" 
                android:textColor="@color/red"  
                android:textSize="12sp" 
                />
            
            
            </LinearLayout>
            
            
            
            
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dip"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                />
            

            <TextView
                android:id="@+id/textView1"
                android:layout_marginTop="10dip"
                android:layout_width="0dip"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="忘记密码?" 
                android:textColor="@color/red"  
                android:textSize="14sp" 
                />

        </LinearLayout>

        <TextView
            android:id="@+id/login"
            android:layout_width="277dip"
            android:layout_height="35dip"
            android:layout_below="@id/password_box"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dip"
            android:background="@drawable/login"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>
    
    <LinearLayout
            android:id="@+id/regLL"
            android:layout_width="277dip"
            android:layout_height="56.5dip"
            android:layout_alignParentBottom="true" 
            android:layout_centerHorizontal="true"
           
             
            android:orientation="horizontal" >
    <TextView
            android:id="@+id/regLinkTv"
            android:layout_width="187dip"
            android:layout_height="35dip"
          android:text="还没有注册夜店中国账号?" 
             android:layout_marginTop="0dip"
         
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp" />
    <TextView
            android:id="@+id/regLinkBtn"
            android:layout_width="57dip"
            android:layout_height="35dip"
          android:text="立即注册" 
             android:layout_marginTop="0dip"
         
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="14sp" />
    </LinearLayout>
    

</RelativeLayout>