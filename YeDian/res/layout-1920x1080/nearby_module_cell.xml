<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:minHeight="90dip" >

    <LinearLayout
        android:id="@+id/leftLL"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_marginLeft="7dip"
        android:layout_marginTop="7dip"
        android:gravity="left"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/avatarImg"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_margin="2dip"
            android:adjustViewBounds="true"
            android:background="@drawable/nearby_u2"
            android:scaleType="fitXY" >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightLL"
        android:layout_width="0dip"
        android:layout_height="80dip"
        android:layout_marginLeft="7dip"
        android:layout_marginTop="7dip"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="25dip"
            android:layout_marginLeft="7dip"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="勇敢的小帅鼠"
            android:textColor="#000000"
            android:textSize="16dip" >
        </TextView>

        <LinearLayout
            android:id="@+id/bottomLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dip"
            android:layout_marginTop="7dip"
            android:gravity="left"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/sexAndAgaLL"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="20dip"
                
                android:gravity="left"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/ageTv"
                    android:layout_width="50dip"
                    android:layout_height="20dip"
                    android:layout_gravity="center_vertical"
                   android:background="@drawable/sex"
                    android:gravity="right"
                    android:text="20"
                    android:textColor="@color/white"
                    android:textSize="12dip" >
                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/distanceAndTimeTv"
                android:layout_width="40dip"
                android:layout_height="20dip"
              android:layout_weight="1"
               
                android:layout_marginTop="1dip"
                android:gravity="right"
                android:text="2.3公里"
                android:textColor="#000000"
                android:textSize="12dip" >
                
                
            </TextView>
        </LinearLayout>
        
        
        <LinearLayout
            android:id="@+id/bottom2LL"
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:layout_marginLeft="7dip"
            android:layout_marginTop="2dip"
            android:gravity="left"
            android:orientation="horizontal" >

           <TextView
        android:id="@+id/contentTv"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
     
        android:gravity="left"
        android:textColor="#000000"
       android:layout_marginLeft="2dip" 
       android:layout_marginTop="5dip" 
        android:text="我的动态......."
        android:textSize="12dip" >
    </TextView>


            <TextView
                android:id="@+id/timeTv"
                android:layout_width="40dip"
                android:layout_height="20dip"
              android:layout_weight="1"
               
                android:layout_marginTop="0dip"
                android:gravity="right"
                android:text="2014-05-10"
                android:textColor="#000000"
                android:textSize="12dip" >
                
                
            </TextView>
        </LinearLayout>
        
        
        
    </LinearLayout>

</LinearLayout>